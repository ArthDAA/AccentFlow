{
  "manifest_version": 3,
  "name": "AccentFlow",
  "version": "Alpha 0.1",
  "description": "Syst√®me d'accents cycliques universel - Alt + lettre pour accents",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}